<div class="container">
  <div class="row row-cols-1 row-cols-md-2 mt-4">
  <% @flats.each do |flat| %>
    <div class="col mb-4">
      <div class="card-trip">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
        <div class="card-trip-infos">
          <div>
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
          </div>
          <h2 class="card-trip-pricing"><i class="fas fa-users"></i> <%= flat.number_of_guests %></h2>
          <h2 class="card-trip-pricing">$<%= flat.price_per_night %></h2>
        </div>
          <div class="card-footer d-flex justify-content-around">
            <small class="text-muted middle">Last updated 3 mins ago</small>
            <div class="btn-group" role="group" aria-label="Basic example">
              <button type="button" class="btn btn-outline-primary"><%= link_to "Details", flat_path(flat) %></button>
              <button type="button" class="btn btn-outline-warning px-4">Edit</button>
              <button type="button" class="btn btn-outline-danger">Remove</button>
            </div>
          </div>
      </div>
    </div>
  <% end %>
  </div>
</div>
